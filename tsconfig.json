{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "outDir": "./dist",
    "baseUrl": "./src",
    "sourceMap": true,
    "paths": {
      "fixtures/*": ["../__fixtures__/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "../__fixtures__"]
}
